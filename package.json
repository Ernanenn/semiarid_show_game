{
    "name": "show-semiarido-quiz",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "engines": {
        "node": ">=20.0.0 <25.0.0",
        "npm": ">=10.0.0"
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
        "lint:fix": "eslint . --ext js,jsx,ts,tsx --fix",
        "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" \"server/**/*.{js,ts}\"",
        "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\" \"server/**/*.{js,ts}\"",
        "type-check": "tsc --noEmit",
        "preview": "vite preview",
        "dev:server": "nodemon server/index.js",
        "start:server": "node server/index.js",
        "dev:full": "concurrently \"npm run dev\" \"npm run dev:server\"",
        "setup:db": "node -e \"import('./server/db/sqlite3.js').then(m => m.initDatabase())\"",
        "start": "npm run setup:db && node server/index.js",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:watch": "vitest --watch"
    },
    "dependencies": {
        "@vitejs/plugin-react": "^4.2.0",
        "better-sqlite3": "^12.4.1",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "styled-components": "^6.1.1",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "vite": "^5.0.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^14.1.2",
        "@testing-library/user-event": "^14.5.1",
        "@types/better-sqlite3": "^7.6.8",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.6",
        "@types/react": "^18.2.37",
        "@types/react-dom": "^18.2.15",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.6",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "@vitest/coverage-v8": "^4.0.9",
        "@vitest/ui": "^4.0.9",
        "concurrently": "^8.2.2",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.4",
        "jsdom": "^27.2.0",
        "nodemon": "^3.0.1",
        "prettier": "^3.1.1",
        "typescript": "^5.3.3",
        "vitest": "^4.0.9"
    }
}
